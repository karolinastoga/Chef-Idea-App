            <Button fx:id="initialize_database_button" layoutX="255.0" layoutY="147.0" mnemonicParsing="false" onAction="#onInitializeDatabaseButton" prefHeight="66.0" prefWidth="73.0" style="-fx-background-color: f0690a;" text="Initialize Database" textAlignment="CENTER" textFill="WHITE" wrapText="true">
